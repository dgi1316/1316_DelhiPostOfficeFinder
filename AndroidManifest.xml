<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hard.targets.delhi.post.office.finder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme" >
        <activity
            android:name="com.hard.targets.delhi.post.office.finder.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hard.targets.delhi.post.office.finder.TutorialActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
        </activity>
        <activity
            android:name="com.hard.targets.delhi.post.office.finder.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.hard.targets.delhi.post.office.finder.MAINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity
            android:name="com.hard.targets.delhi.post.office.finder.ViewActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.hard.targets.delhi.post.office.finder.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hard.targets.delhi.post.office.finder.MainActivity" />

            <intent-filter>
                <action android:name="com.hard.targets.delhi.post.office.finder.VIEWACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hard.targets.delhi.post.office.finder.ViewPinActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.hard.targets.delhi.post.office.finder.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hard.targets.delhi.post.office.finder.MainActivity" />

            <intent-filter>
                <action android:name="com.hard.targets.delhi.post.office.finder.VIEWPINACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hard.targets.delhi.post.office.finder.ViewDistrictActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.hard.targets.delhi.post.office.finder.MainActivity"
            android:screenOrientation="portrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hard.targets.delhi.post.office.finder.MainActivity" />

            <intent-filter>
                <action android:name="com.hard.targets.delhi.post.office.finder.VIEWDISTRICTACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
